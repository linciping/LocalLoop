<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@color/white"
    android:padding="16dp">


    <ImageView
        android:id="@+id/image_type"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/load_backgroud_24" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/image_type"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="8dp"
        android:text="New Text\nNew Text\nNew Text\nNew Text\n" />

    <ImageView
        android:id="@+id/image_info"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txt_info"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/load_backgroud_96" />

    <GridView
        android:id="@+id/recyler_info_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"
        android:layout_below="@id/txt_info"
        android:layout_marginTop="8dp" />
</RelativeLayout>