<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:layout_margin="16dp"
        android:src="@drawable/load_backgroud_64" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/image_icon"
        android:text="匿名用户" />

    <ImageView
        android:id="@+id/image_sex"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/txt_username"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/image_icon"
        android:src="@drawable/load_backgroud_24" />

    <Button
        android:id="@+id/btn_level"
        android:layout_width="48dp"
        android:layout_height="16dp"
        android:layout_below="@id/txt_username"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/image_sex"
        android:background="@color/nav_txt_check"
        android:text="级别"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_state"
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/nav_txt_check"
        android:text="进行中"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_header_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_state"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="1月前|0.0km"
        android:textSize="10sp" />
</RelativeLayout>