<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/padding_8"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_icon"
            android:layout_width="48dp"
            android:scaleType="fitXY"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:src="@drawable/load_backgroud_64" />

        <TextView
            android:id="@+id/activity_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/activity_icon"
            android:text="名称"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/activity_sex_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/activity_username"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/activity_icon"
            android:src="@drawable/load_backgroud_24" />

        <Button
            android:id="@+id/activity_level"
            android:layout_width="48dp"
            android:layout_height="16dp"
            android:layout_below="@id/activity_username"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/activity_sex_icon"
            android:background="@color/nav_txt_check"
            android:text="等级"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/activity_state"
            android:layout_width="64dp"
            android:background="@drawable/btn_noable_background"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:text="状态"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/activity_style_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/load_backgroud_24" />

        <TextView
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/activity_style_icon"
            android:text="运动"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_name"
            android:layout_toRightOf="@id/activity_style_icon"
            android:padding="2dp"
            android:text="描述"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_description"
            android:layout_toRightOf="@id/activity_style_icon"
            android:padding="2dp"
            android:text="描述"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/activity_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_time"
            android:layout_toRightOf="@id/activity_style_icon"
            android:padding="2dp"
            android:text="描述"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/activity_picture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_16"
            android:scaleType="fitXY"
            android:src="@drawable/load_backgroud_96" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/activity_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="8dp"
        android:text="一个月前|382.3km"
        android:textSize="8sp" />
</LinearLayout>